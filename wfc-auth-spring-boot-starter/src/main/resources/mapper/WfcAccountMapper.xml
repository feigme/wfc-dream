<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wfc.starter.auth.dal.mapper.WfcAccountMapper">
  <resultMap id="ResultMap" type="com.wfc.starter.auth.dal.entity.WfcAccountDO">
    <id column="id" property="id"/>
    <result column="gmt_create" jdbcType="TIMESTAMP" property="gmtCreate"/>
    <result column="gmt_modified" jdbcType="TIMESTAMP" property="gmtModified"/>
    <result column="login_name" jdbcType="VARCHAR" property="loginName"/>
    <result column="phone_num" jdbcType="VARCHAR" property="phoneNum"/>
    <result column="password" jdbcType="VARCHAR" property="password"/>
    <result column="slat" jdbcType="VARCHAR" property="slat"/>
    <result column="disabled" jdbcType="TINYINT" property="disabled"/>
  </resultMap>
  <sql id="Base_Column_List">
    id, gmt_create, gmt_modified, login_name, phone_num, password, slat, disabled
  </sql>

  <select id="getAccountByLoginName" resultMap="ResultMap">
    SELECT
    <include refid="Base_Column_List" />
    FROM wfc_account
    where login_name = #{loginName}
  </select>

  <select id="getAccountByPhoneNum" resultMap="ResultMap">
    SELECT
    <include refid="Base_Column_List" />
    FROM wfc_account
    where phone_num = #{phoneNum}
  </select>

</mapper>